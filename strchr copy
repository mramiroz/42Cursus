#include "libft.h"

char	*ft_strchr(char *str, char ch)
{
	int		i;
	int		n;
	char	*dest;

	i = 0;
	n = 0;
	while (str[i] != ch)
	{	
		i++;
	}
	n = i;
	i = 0;
	dest[n];
	while (str[i] != '\0')
	{
		str[i];
		i++;
		n++;
	}
}
