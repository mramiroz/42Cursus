#include "libft.h"

void	*ft_memchr(const void *str, int c, size_t n)
{
	size_t			i;
	size_t			t;
	const char		*src;
	const char		*d;

	src = (unsigned char *)str;
	d = 0;
	i = 0;
	t = 0;
	while (src[i] != c)
	{
		i++;
	}
	while (t < n && src[i] != '\0')
	{
		d[t] = src[i];
		t++;
		i++;
	}
	return (d);
}
