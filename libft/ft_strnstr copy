#include <stdio.h>

char	*ft_strstr(const char *haystack, const char *needle)
{
	int	i;
	int	n;
	int	j;

	i = 0;
	n = 0;
	j = 0;
	while (needle[n])
		n++;
	while (haystack[i] != '\0')
	{
		if (haystack[i] == needle[j])
		{
			while (haystack[i] == haystack[j])
			{
				i++;
				j++;
			}
		}
		i++;
	}
}

int main()
{
	printf("%s", ft_strstr("Hola Buenas", "Buenas"));
}

